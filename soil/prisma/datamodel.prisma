type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  posts: [Post!]!
}

type Client {
  id: ID! @unique
  name: String!
  secret: String!
  trusted: Boolean! @default(value: "false")
}

type Post {
  id: ID! @unique
  title: String!
  published: Boolean! @default(value: "false")
  author: User
}
