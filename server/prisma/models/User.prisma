type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  purchases: [Purchase!]!
  payments: [Payment!]!
  transactions: [Transaction!]!
  items: [Item!]!
  role: UserRole! @default(value: MEMBER)
  balance: Float! @default(value: 0)
}

enum UserRole {
  SUPER,
  ADMIN,
  MEMBER
}
