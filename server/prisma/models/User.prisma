type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  avatar: String
  purchases: [Purchase!]!
  payments: [Payment!]!
  transactions: [Transaction!]!
  items: [Item!]!
  role: UserRole! @default(value: MEMBER)
  balance: Float! @default(value: 0)
  posts: [Post!]! @relation(name: "PostAuthor", onDelete: CASCADE)
  likedPosts: [Post!]! @relation(name: "LikedStories")
  comments: [Comment!]! @relation(name: "CommentAuthor", onDelete: CASCADE)
  likedComments: [Comment!]! @relation(name: "LikedComments")
}

enum UserRole {
  SUPER,
  ADMIN,
  MEMBER
}
