type Event {
  id: ID! @unique
  title: String!
  description: String!
  date: DateTime!
  image: String!
  comments: [Comment!]! @relation(name: "EventComments", onDelete: CASCADE)
  likedBy: [User!]! @relation(name: "LikedEvents")
  owner: User! @relation(name: "EventOwner")
  committee: Committee! @relation(name: "EventCommittee", onDelete: CASCADE)
  todos: [Todo!]! @relation(name: "EventTodo", onDelete: CASCADE)
}
